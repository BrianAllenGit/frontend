{{navigation-bar session=session}}
<section id="login" class="slated-background">
    <div class="login-descr">
        <div class="alert alert-blue">
            <div class="alert-label">
                Business
            </div>
            <div class="alert-message">
                Scannly is free for business owners. Give your customers the best experience
            </div>
        </div>

        <h3 id="tagline">No more lines, forever.</h3>
        Never wait in another line. Scan the items in your cart<br />
        and check out with your phone
    </div>

    <div class="login-form">
        <div class="login-box">

            <div class="login-box-label">
                <div>
                    <h1>Sign In</h1>
                </div>
                <div>
                    {{#link-to 'sign-up'}}Sign Up{{/link-to}}
                </div>
            </div>

            <button class="button-gradient-square" {{action "googleSignIn"}}> 
                Sign in with <b>Google</b>
            </button><br />

            <form>
                {{input type='text' class='input-box' value=email placeholder='Email' }}<br />
                {{input type='password' class='input-box' value=password placeholder='Password' }}<br />
            
                <div class="login-box-form-submit">
                    <div class="remember-me">
                        <input type="checkbox" name="remember-me" class="checkbox"/>
                        <label for="remember-me">
                            Remember Me
                        </label>
                    </div>
                    <input type="submit" class="button-gradient-square" value="Sign In &rarr;" {{action 'signIn' 'password'}}>
                </div>
            </form>

            {{#link-to "passwordreset"}}Forgot your password?{{/link-to}} 
            <div class="login-box-terms">
                <a href="#">Terms & Conditions</a>
            </div>
        </div>

    </div>
</section>
{{main-footer}}


