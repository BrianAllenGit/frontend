{{#each model.receipt as |receipt|}}
    <div class="receipt-row">
        <div class="receipt-info-container">
            <div class="receipt-store-price">
                <div class="receipt-store">
                    <p class="store-name">{{receipt.storename}}</p>
                    <p class="store-address">{{receipt.storeaddress}}helo</p>
                </div>
                <div class="receipt-price">
                    <p class="price-title">Order total</p>
                    <p class="price-total">$ {{receipt.total}}</p>
                </div>
            </div>
            <div class="receipt-details {{if (eq activeModel.receipt receipt) "active" ""}} ">
                {{#if (eq activeModel.receipt receipt)}} 
                        <div class="receipt-details-container"> 
                            <div class="receipt-detail-items">
                                {{#each activeModel.receiptdetails as |receiptdetails|}}   
                                    <div class="item-list">
                                        <div class="receipt-details-productname">
                                            <p>{{receiptdetails.productname}}</p>
                                        </div>
                                        <div class="receipt-details-productquantity">
                                            <p>{{receiptdetails.productquantity}}</p>
                                        </div>
                                        <div class="receipt-details-productprice">
                                            <p>${{receiptdetails.productprice}}</p>
                                        </div>
                                    </div>
                                {{/each}} 
                            </div>
                            <div class="receipt-detail-subtotal">
                                <div class="receipt-subtotal">
                                    <p class="price-title">Subtotal</p>
                                    <p class="price-total-small">$1.50</p>
                                </div>
                                <div class="receipt-tax">
                                    <p class="price-title">Tax</p>
                                    <p class="price-total-small">$.49</p>
                                </div>
                            </div>
                        </div>
                {{/if}}
            </div>
            <img src="/assets/images/receipt-line.png" width="100%" height="1px"/>
            <div class="receipt-date-expand">
                <div class="receipt-date">
                    <img src="/assets/images/dashboard-calendar.png" width="18px" height="18px"/>
                    <p>{{format-epoch receipt.timestamp}}</p>
                </div>
                {{#if (eq activeModel.receipt receipt)}}
                    {{#link-to "portal.pastorders"}}
                        <div class="receipt-expand">
                            <img class="image-expand" width="10.5px" height="6px"/>
                        </div>
                    {{/link-to}}
                {{else}}
                    {{#link-to "portal.pastorders.show" receipt.receiptid}}
                        <div class="receipt-expand">
                            <img class="image-expand" width="10.5px" height="6px"/>
                        </div>
                    {{/link-to}}
                {{/if}}
            </div>
        </div>
    </div>
{{/each}} 