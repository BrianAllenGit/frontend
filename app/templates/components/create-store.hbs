<div class="successful-save">Save Successful!</div>

<div class="info-container">
	<form {{action "createStore" on="submit"}}>
		<div class="info-row-container">
			<div class="info-row">
				{{input type='text' class='input-box' id="name" value=name placeholder="Store Name"}}
				{{input-mask type="text" mask="(999) 999-9999" type="tel" pattern="[\(]\d{3}[\)][\s]\d{3}[\-]\d{4}" class='input-box' id="phone" value=phone placeholder="Phone Number" }}				
			</div>

			<div class="info-row">
				{{input type='text' maxlength="16" pattern="0.[0-9]+" title="Please put in tax as a value less than 1" class='input-box' id="tax" value=tax placeholder="Tax Rate" }}

				{{place-autocomplete-field
				value= address
				placeholder=model.address
				disable=false
				handlerController= this
				inputClass= 'input-box address-box'
				focusOutCallback='done' 
				placeChangedCallback='placeChanged' 
				restrictions=restrictions
				}}
				
			</div>
			<div class="info-row-button">
				{{input type='submit' class="button button-gradient-square blue-gradient" value="Create Store"}}
			</div>
		</div>
	</form>
</div>
